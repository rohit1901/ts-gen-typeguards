{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "outDir": "dist/",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@generator/*": ["generator/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "src/out/",
    "src/**/*.spec.ts"
  ]
}
