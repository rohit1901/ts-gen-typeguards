{
  "name": "ts-gen-typeguards",
  "version": "1.0.0",
  "description": "A utility to generate typeguards",
  "main": "index.ts",
  "scripts": {
    "build": "tsc && rollup -c",
    "watch-mode": "tsc -w -p tsconfig.json",
    "start": "cd src && node index.js",
    "start-prod": "node dist/ts-gen-typeguards.min.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prettify": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohit1901/ts-gen-typeguards.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": "Rohit Khanduri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rohit1901/ts-gen-typeguards/issues"
  },
  "homepage": "https://github.com/rohit1901/ts-gen-typeguards#readme",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.35.0",
    "terser": "^5.19.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "helpers.ts"
    ],
    "maxWorkers": 1,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
