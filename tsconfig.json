{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "src",
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "start": "node src/index.js",
  "exclude": [
    "node_modules",
    "src/out/**/*",
    "src/__tests__/**/*.ts",
    "lib",
    "src/dry-run.ts"
  ]
}
