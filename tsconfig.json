{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "rootDir": "src",
    // NOTE: add to produce production build
    "outDir": "lib",
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "src/out/**/*",
    "src/__tests__/**/*.ts",
    "lib",
    "lib-esm"
  ]
}
